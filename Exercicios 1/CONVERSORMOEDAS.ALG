Algoritmo "conversormoedas"

Var

  R, D, C, Q: real

Inicio
      C<-1
      Escreva ("Quantas vezes você quer converter ?")
      Leia (Q)
      Enquanto (C <= Q) faça
         Escreva("Qual o valor em R$? ")
         leia(R)
         D<-R/5.30
         Escreval("O valor convertido em US$ é: ", D:5:2)
         C<-C+1
      Fimenquanto



Fimalgoritmo