Algoritmo "Aniversário da Creuza"

Var

   ano_atual, ano_nascimento, idade: inteiro

Inicio
   Escreva("Informe o ano atual: ")
   leia(ano_atual)
   Escreva("Informe o ano de nascimento: ")
   leia(ano_nascimento)

   idade<- ano_atual-ano_nascimento
   Escreva("Sua idade atual é: ", idade)




Fimalgoritmo